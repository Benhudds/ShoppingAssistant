<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShoppingAssistant.Views.AddItemPriceLocation">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Item"
                   Text="{Binding Name}"/>
            <Entry Placeholder="Price"
                   Text="{Binding Price}"/>
            <Button Text="Add"
                    x:Name="btnAddIPL"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>